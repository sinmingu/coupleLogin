<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="70dp"
    android:background="#E9E6F3"
    android:paddingBottom="40dp"
    android:weightSum="1"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#E9E6F3"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.4"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/main_img"
                android:layout_weight="0.2"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.4"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:text="커플문답"
                android:textColor="#C8A585"
                android:gravity="center"
                android:textSize="35dp"
                android:fontFamily="@font/binggrae_bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/binggrae"
                android:text="우리는 서로에 대해 얼마나 알고 있을까"
                android:layout_marginBottom="10dp"
                android:textColor="#C8A585"
                android:textSize="13dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/btn_write_circle"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="0.8"
                    android:id="@+id/id_img"
                    android:layout_height="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:hint="아이디를 입력하세요"
                    android:layout_weight="0.2"
                    android:textSize="13dp"
                    android:background="@null"
                    android:id="@+id/userId"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_write_circle"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="0.8"
                    android:id="@+id/pw_img"
                    android:layout_height="15dp" />

                <EditText
                    android:hint="비밀번호를 입력하세요"
                    android:id="@+id/userPw"
                    android:layout_weight="0.2"
                    android:textSize="13dp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text="자동로그인"
                        android:textColor="#9E9E9E"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:buttonTint="#9E9E9E"

                        android:id="@+id/auto_login"
                        android:layout_marginBottom="5dp"
                        android:layout_height="20dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingTop="40dp"
            android:orientation="vertical"
            android:layout_height="match_parent">





            <Button
                android:layout_width="wrap_content"
                android:text="테스트"
                android:visibility="gone"
                android:id="@+id/pet_btn"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_btn"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:stateListAnimator="@null"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/btn_rect_circle_pink"
                android:text="로그인"/>

            <TextView
                android:layout_width="match_parent"
                android:text="회원가입"
                android:id="@+id/move_RegiAc"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="@font/melona"
                android:layout_height="wrap_content"
                android:textColor="#9E9E9E"/>


        </LinearLayout>





    </LinearLayout>






</LinearLayout>
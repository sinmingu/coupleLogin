<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".Question_self">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:text="문답지를 만들어"
            android:textColor="#9E9E9E"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="상대방에게 보내보세요"
            android:textColor="#9E9E9E"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="메인에서 질문을 확인 후 답변을 보낼 수 있습니다."
            android:textColor="#9E9E9E"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="200dp"
            android:id="@+id/img_test"
            android:layout_height="200dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:stateListAnimator="@null"
            android:fontFamily="@font/binggrae_bold"
            android:background="@drawable/btn_pink_click"
            android:text="50문답"
            android:id="@+id/question_50"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:stateListAnimator="@null"
            android:fontFamily="@font/binggrae_bold"
            android:background="@drawable/btn_pink_click"
            android:text="100문답"
            android:id="@+id/question_100"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
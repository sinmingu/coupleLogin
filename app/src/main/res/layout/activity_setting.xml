<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#E9E6F3"
        android:gravity="center"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/de_no_cancle"
            android:visibility="invisible"
            android:layout_weight="0.1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="개인정보 수정"
            android:layout_weight="0.8"
            android:textColor="#C8A585"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:textColor="#3995d3"
            android:textSize="12dp"
            android:id="@+id/de_no_can"
            android:layout_weight="0.1"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:background="#EAEAEA"
        android:layout_height="1dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="프로필 및 계정"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textColor="#F19DAE"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:background="#D8D8D8"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="아이디"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/userId"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="이 름"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:id="@+id/userNick"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/edit_userNick"
                    android:background="@drawable/btn_rect"
                    android:hint="변경할 이름"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="수정"
                    android:textColor="#F19DAE"
                    android:gravity="center"
                    android:id="@+id/userNick_change"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:background="#D8D8D8"
                android:layout_height="1dp" />






            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="비밀번호 변경"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:id="@+id/password_re"
                    android:gravity="right"
                    android:textColor="#F19DAE"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.8"
                    android:text="변경" />

            </LinearLayout>


            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/btn_rect"
                android:layout_marginBottom="5dp"
                android:hint="새 비밀번호를 입력하세요"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:id="@+id/edit_pass"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/btn_rect"
                android:hint="새 비밀번호를 다시 입력하세요"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:id="@+id/edit_pass_re"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
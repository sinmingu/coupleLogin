<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RandomGame_Rulet">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#E9E6F3"
        android:gravity="center"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/de_no_cancle"
            android:visibility="invisible"
            android:layout_weight="0.1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="룰렛게임"
            android:layout_weight="0.8"
            android:textColor="#C8A585"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:textColor="#3995d3"
            android:textSize="12dp"
            android:id="@+id/de_no_can"
            android:layout_weight="0.1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#EAEAEA"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="새게임"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:visibility="invisible"
            android:gravity="center"
            android:fontFamily="@font/binggrae_bold"
            android:background="@drawable/btn_circle"
            android:id="@+id/btn_regame"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_circle"
            android:fontFamily="@font/test3"
            android:gravity="center"
            android:text="1번룰렛"
            android:textColor="#ffffff"
            android:id="@+id/first_rulet"
            android:textSize="13dp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="2번룰렛"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:fontFamily="@font/binggrae_bold"
            android:background="@drawable/btn_circle"
            android:id="@+id/second_rulet"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="커플룰렛"
            android:textSize="20dp"
            android:fontFamily="@font/binggrae_bold"
            android:layout_marginBottom="20dp"
            android:textColor="@color/pink_text"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="아래 START버튼을 눌러\n데이트 장소를 선택해보세요"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:gravity="center"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="300dp">

            <ImageView
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:id="@+id/rulet_image"
                android:layout_height="300dp"/>

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/rulet_center"
                android:layout_gravity="center"
                android:layout_height="50dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/rulet_top"/>


        </FrameLayout>




    </LinearLayout>


</LinearLayout>
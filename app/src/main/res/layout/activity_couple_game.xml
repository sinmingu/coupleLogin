<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".CoupleGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="이구동성"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:fontFamily="@font/binggrae_bold"
            android:textColor="#C8A585"
            android:textSize="25dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.4"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.2"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.3"
                    android:id="@+id/getFile"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/binggrae_bold"
                    android:background="@drawable/btn_one"
                    android:layout_height="90dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="0.4"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/center_img"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/binggrae_bold"
                    android:id="@+id/text_couple_id"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:background="@drawable/btn_one"
                    android:layout_height="90dp" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.4"
                android:layout_height="wrap_content" />


        </LinearLayout>




        <TextView
            android:layout_width="match_parent"
            android:id="@+id/couple_id"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:text="커플과 같이"
            android:textColor="#ffffff"
            android:stateListAnimator="@null"
            android:fontFamily="@font/binggrae_bold"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_pink_click"
            android:visibility="gone"
            android:id="@+id/btn_couple_start"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_start"
            android:stateListAnimator="@null"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/binggrae_bold"
            android:background="@drawable/btn_pink_click"
            android:text="새로 시작하기"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:text="결과확인하기"
            android:stateListAnimator="@null"
            android:textColor="#ffffff"
            android:fontFamily="@font/binggrae_bold"
            android:background="@drawable/btn_pink_click"
            android:id="@+id/btn_result"
            android:layout_height="wrap_content" />



    </LinearLayout>


</LinearLayout>
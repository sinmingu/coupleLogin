<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".detail_room">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#E9E6F3"
        android:gravity="center"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/de_no_cancle"
            android:layout_weight="0.1"
            android:visibility="invisible"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="방 정보"
            android:layout_weight="0.8"
            android:textColor="#C8A585"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:textColor="#3995d3"
            android:textSize="12dp"
            android:id="@+id/de_no_can"
            android:layout_weight="0.1"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:background="#EAEAEA"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="방제목"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/binggrae"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/room_name"
            android:background="@drawable/btn_rect_gray"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"

            android:text="개설자"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/binggrae"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/room_id"
            android:background="@drawable/btn_rect_gray"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"

            android:text="방 만든날짜"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/binggrae"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/room_date"
            android:background="@drawable/btn_rect_gray"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_into"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/binggrae_bold"
            android:text="참가하기"
            android:stateListAnimator="@null"
            android:background="@drawable/btn_pink_click"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_login"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/binggrae_bold"
            android:background="@drawable/btn_pink_click"
            android:text="들어가기"
            android:stateListAnimator="@null"
            android:layout_height="wrap_content" />



    </LinearLayout>


</LinearLayout>